{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "server:test",
      "command": "dotnet test",
      "options": {
        "cwd": "${workspaceFolder}/server/test"
      },
      "group": "test",
      "type": "shell",
      "presentation": {
        "reveal": "always",
        "clear": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "debug-mock:run",
      "command": "dotnet run --project server/debug-mock",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build:debug-mock",
      "command": "dotnet build server/debug-mock/debugmock.csproj",
      "group": "build",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build:mazak",
      "command": "dotnet build server/machines/mazak/mazak.csproj",
      "group": "build",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build:niigata",
      "command": "dotnet build server/machines/niigata/niigata.csproj",
      "group": "build",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "vite:insight",
      "command": "pnpm start",
      "options": {
        "cwd": "${workspaceFolder}/client/insight",
        "env": {
          "BROWSER": "no"
        }
      },
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }
    },
    {
      "label": "terminate:vite:insight",
      "command": "echo ${input:terminateViteInsight}",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "close": true
      }
    }
  ],
  "inputs": [
    {
      "id": "terminateViteInsight",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "vite:insight"
    }
  ]
}
