{
  // Use IntelliSense to find out which attributes exist for C# debugging
  // Use hover for the description of the existing attributes
  // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug FMS Insight Test File",
      "autoAttachChildProcesses": true,
      "program": "${workspaceRoot}/client/insight/node_modules/vitest/vitest.mjs",
      "cwd": "${workspaceFolder}/client/insight",
      "args": ["run", "${file}"],
      "smartStep": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Mock Server",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceRoot}/server/debug-mock/bin/Debug/net8.0/BlackMaple.MachineFramework.DebugMock.dll",
      "args": [],
      "cwd": "${workspaceRoot}/server/debug-mock/bin/Debug/net8.0",
      "stopAtEntry": false,
      "console": "internalConsole",
      "preLaunchTask": "build:debug-mock"
    },
    {
      "name": "FMS Insight",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:1234",
      "webRoot": "${workspaceFolder}/client/insight/src",
      "runtimeExecutable": "/usr/bin/chromium"
    }
  ],
  "inputs": [
    {
      "id": "password",
      "description": "Password",
      "type": "promptString",
      "password": true
    }
  ]
}
